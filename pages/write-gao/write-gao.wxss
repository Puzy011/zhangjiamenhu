/* pages/severs/write/write.wxss */
@import "../seversFont.wxss";
.iconfont{font-size: inherit;}

.arrowR::before{right: 0;}
.img, textarea, .massage {background: #fff;}
textarea {width: 100%;height:140rpx;}

.img image,.add-img {
    width: 165rpx;
    height: 165rpx;
    border-radius: 12rpx;
}

.img image:nth-child(4n+4) {
    margin-right: 0;
}

.add-img {
    line-height: 165rpx;
    font-size: 64rpx;
    border: 1rpx dashed #aaa;
    display: inline-block;
    vertical-align: top;
}
.content-tag{display:inline-block;padding: 0 16rpx;line-height: 26px;font-size: 14px;margin-right: 16rpx;margin-top: 16rpx;background: #fff;color: #666;border-radius: 6rpx;}
.content-tag.active{color: #fff;background: #f66;}
.massage {
    padding: 0 30rpx;
}
.massage .list {
    padding: 30rpx 0;
    position: relative;align-items: center;
}

 .list picker {
    padding-right: 30rpx;
} 

.list switch {
    transform: scale(0.85, 0.85);
    transform-origin: right center;
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    height: 68rpx;
}



.shengming {
  width: 100%;
  height: 100%;
  padding: 30rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
}
.shengming .content{overflow-y: auto;-webkit-overflow-scrolling: touch;}
.shengming button {width: 100%;} 

