/*评论*/

.co-title {
  padding: 30rpx;
}

.comment {
  padding: 20rpx 30rpx;
  line-height: 1.5;
  color: #444;
  word-break: break-all;
}

.co-item {
  padding: 20rpx 0;
}

.co-userimg {
  width: 60rpx;
  height: 60rpx;
}

.co-item .name {
  line-height: 60rpx;
}

.co-userimg image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.co-caozuo {
  padding: 10rpx 30rpx;
  font-size: 32rpx;
}

.co-answerb {
  background: #f8f8f8;
  padding: 10rpx 30rpx;
  border-radius: 12rpx;
}

.co-answer {
  padding: 10rpx 0;
}

/*评论输入框*/

.pinglun-input {
  background: #eee;
  padding: 20rpx 30rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 2;
}

.pinglun-input .close {
  font-size: 48rpx;
  align-self: center;
  width: 48rpx;
}

.pinglun-input .close:active {
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
}

.pinglun-input textarea {
  width: 100%;
  border: 1rpx solid #ddd;
  background: #fff;
  padding: 20rpx;
}

.send-btn {
  width: 200rpx;
}

/* 弹出框 */

.pup-content {
  line-height: 88rpx;
  border-radius: 3px;
  z-index: 2;
  width: 80%;
}

.pup-content .pop-item:active, .pup-btn>view:active {
  background: rgba(0, 0, 0, 0.05);
}

.pup-content .pop-item:last-child.gridXb::before {
  display: none;
}

radio-group .wx-radio-input {
