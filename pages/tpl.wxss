/*发布信息列表*/

.msg-list {
  padding: 30rpx;
  position: relative;
}

.left-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user-msg {
  line-height: 1.1;
}

.user-msg.sub {
  overflow: visible;
}

.user-name {
  font-weight: bold;
}

.admin-flag {
  font-size: 12px;
  font-weight: 200;
  color: #e64340;
  vertical-align: top;
}

/*置顶*/

.vip-top-box {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
  overflow: hidden;
}

.vip-top-box::after {
  content: "";
  display: block;
  border: 46rpx solid;
  border-color: #f66 #f66 transparent transparent;
}

.vip-top {
  width: 100%;
  height: 100%;
  text-align: center;
  position: absolute;
  display: block;
  color: #fff;
  top: 0;
  left: 0;
  transform: rotate(45deg) translate(0, -25%) scale(0.8);
}

/* 红包福利 */

/* .time-msg{line-height: 28rpx;} */

.iconfont.hongbao-ico {
  display: inline-block;
  vertical-align: top;
  color: #f44;
  animation: shake 1s linear infinite;
}

@keyframes shake {
  0% {
    transform: scale(1.2) rotate(15deg);
  }

  50% {
    transform: scale(1.2) rotate(-15deg);
  }

  100% {
    transform: scale(1.2) rotate(15deg);
  }
}

/* 联系 支付 删除按钮*/

.contact {
  display: inline-block;
  padding: 0 20rpx;
  line-height: 24px;
  font-size: 12px;
}

.del:active {
  color: #f66;
}

.contact:active {
  color: #f66;
  background: rgba(255, 103, 103, 0.1);
}

/*文本内容*/

.user-content {
  font-size: 32rpx;
  line-height: 1.3;
  word-break: break-all;
  /*文本只显示3行  */
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/*用户发表的图片*/

.img-list {
  width: 32%;
  padding-top: 32%;
  margin-right: 2%;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.img-list image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.img-list .more-img {
  width: 100%;
  height: 100%;
  line-height: 222rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 48rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.img-list:nth-child(3n+3) {
  margin-right: 0;
  position: relative;
}

.content-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
  line-height: 1;
  font-size: 12px;
}

.content-tag::last-child {
  margin-right: 0;
}

.content-tag:nth-child(7n+1) {
  color: #fd9d21;
}

.content-tag:nth-child(7n+2) {
  color: #ff6767;
}

.content-tag:nth-child(7n+3) {
  color: #88d969;
}

.content-tag:nth-child(7n+4) {
  color: #00d3be;
}

.content-tag:nth-child(7n+5) {
  color: #30c8e9;
}

.content-tag:nth-child(7n+6) {
  color: #7c8af5;
}

.content-tag:nth-child(7n+7) {
  color: #cc7cf5;
}

.iconBtn {
  display: inline-block;
  padding: 10rpx 20rpx;
}

