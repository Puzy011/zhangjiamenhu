@import "../seversFont.wxss";
.iconfont{font-size: inherit;}

/*搜索*/
.search-bar {width: 100%;padding: 0 30rpx;line-height: 64rpx;}
.search-box {padding: 0 30rpx;border-radius: 6rpx;}
.search-box input {height: 64rpx;}
.search-bar .input-inner {position: relative;}
.search-show {position: absolute;top: 0;left: 0;width: 100%;height: 100%;display:block;border-radius: 6rpx;z-index: 2;}
/*搜索按钮*/
.searchbtn {margin-right: -30rpx;}
.searchbtn::after {border: none;}
/*文字滚动  */
.container {height: 100%;display: flex;width: 94%;margin-left:3%;flex-direction: column;justify-content: space-between;box-sizing: border-box;text-align: center;}
.scrolltxt{padding:0 20rpx;background:#fff;}
.marquee_box {position:relative;height:90rpx;display:block;overflow:hidden;} 
.marquee_text {white-space: nowrap;position:absolute;top:0;font-size:14px;height:90rpx;line-height:90rpx;}
/*分类*/
.fenlei swiper-item{padding: 30rpx 0;box-sizing: border-box;}
.classify-list {width: 20%;color: #666;float: left;font-size: 26rpx;}
.classify-list:nth-child(n+6) {margin-top: 20rpx;}
.classify-list .list-img {display: inline-block;width: 90rpx;height: 90rpx;line-height: 90rpx;border-radius: 50%;margin-bottom: 12rpx}
.classify-list:active {-webkit-filter: brightness(0.8);filter: brightness(0.8);}
/*广告位 图片尺寸宽高比5：2 建议尺寸750*300 */
.adsense {position: relative;width: 710rpx;height: 284rpx;margin-left:auto;margin-right:auto;border-radius: 10rpx;overflow: hidden;}
.ad-img {width: 100%;height: 100%;}
.ad-text {position: absolute;right:0;bottom: 0;padding: 0 10rpx;background: rgba(0, 0, 0, 0.2);}

.notice{height: 92rpx;line-height: 92rpx;background:#fff;padding: 0 30rpx;box-sizing: border-box;}
.notice swiper{height: 92rpx;}

.pageviews{margin: 0 auto;padding: 10px 30rpx;background: #fff;position: relative;width: 94%;}
.pageviews::before{content: '';width: 3px;height: 10px;box-shadow: 0 14px 0 #68a6fb,5px 12px 0 #fb6868,10px 14px 0 #68a6fb,15px 12px 0 #fb6868;position: absolute;left: 30rpx;top: 0;}

/*排序*/
.paixu {width: 94%;height: 160rpx;line-height: 92rpx;position: relative; color: #4697e8; margin: 0 auto;margin-bottom: 20rpx;}
.paixu .fixed-top{position: fixed;top: 0;left: 0;z-index: 2;margin: 0;box-shadow: 0 2px 2px rgba(0, 0, 0, 0.05);background: #fff;animation:fadeInDown .3s linear forwards;}
@keyframes fadeInDown{0%{opacity:0;transform:translateY(-100%)}
100%{opacity:1;transform:translateY(0)}
}
.title-item{position: relative}
.title-item::before {content:'';display: block;left: 0;width:100%;height: 2px;position: absolute;background: currentColor;bottom: 0;opacity: 0;transition: all .3s linear;}
.title-item.active{font-weight: bold;}
.title-item.active::before {opacity:1;width: 30%;left: 35%;transition: all .3s linear;}
/* .paixu .line.two {left: 70%;transition: all .2s linear;} */

/*右侧浮动按钮*/
.aside-float-go{position: fixed;bottom: 150rpx;right: 30rpx;z-index: 1;}
.aside-float{position: fixed;bottom: 40rpx;right: 30rpx;z-index: 1;}
.aside-float button{width: 76rpx;height: 76rpx;line-height: 76rpx;border-radius: 50%;padding: 0;font-size: 36rpx;}
.aside-float button:nth-child(n+2){margin-top: 10rpx;}
/* 轮播小点 */
.wx-swiper-dot{background: transparent !important;border:1rpx solid #ddd;transform: scale(0.8);-webkit-transform: scale(0.8);}
.wx-swiper-dot-active{background: #999 !important;border-color: #999;}
page .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 0;height: 30rpx;}

