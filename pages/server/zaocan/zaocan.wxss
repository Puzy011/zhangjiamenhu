.shopCart {
  position: fixed;
  left: 0px;
  bottom: 0px;
  z-index: 50;
  width: 100%;
  height: 48px;
}

.shopCart .content {
  display: flex;
  background: #141d27;
}

.shopcart-list {
   position: absolute; 
   bottom: 130rpx; 
  /* top: 0; */
  left: 0;
  z-index: 50;
  width: 100%;
  transform:translate3d(0, -100%, 0);
}

.shopcart-list :fade-enter-active, :fade-leave-active {
  transition: all 0.5s transform translate3d(0, -100%, 0);
}

.shopcart-list :fade-enter, :fade-leave-active {
  transform: translate3d(0, 0, 0);
}

.shopcart-list .list-header {
  /* position: absolute; */
  height: 84rpx;
  line-height: 80rpx;
  padding: 0 36rpx;
  background: #f3f5f7;
  border-bottom: 1px solid rgba(7, 17, 27, 0.1);
}

.shopcart-list .list-header .title {
  /* position: absolute; */
  float: left;
  font-size: 14px;
  color: rgb(7, 17, 27);
}

.shopcart-list .list-header .empty {
  /* position: absolute;  */

  float: right;
  font-size: 12px;
  color: rgb(0, 160, 220);
}

.shopcart-list .list-content {
   position: absolute; 
   bottom: -100rpx; 
  padding: 0 18px;
  max-height: 217px;
  /* height: 108rpx; */
  overflow: hidden;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid rgba(7, 17, 27, 0.1);
}

.shopcart-list .list-content .shopcart-food {
  position: relative;
  padding: 12px 0;
  box-sizing: border-box;
  /*border-top: 1px solid rgba(7,17,27,0.1);*/
}

.shopcart-list .list-content .shopcart-food .name {
  line-height: 24px;
  font-size: 14px;
  color: rgb(7, 17, 27);
}

.shopcart-list .list-content .shopcart-food .price {
  position: absolute;
  right: 180rpx;
  bottom: 12px;
  line-height: 24px;
  font-size: 14px;
  font-weight: 700;
  color: rgb(240, 20, 20);
}

.shopcart-list .list-content .shopcart-food .cartControl-wrapper {
  position: absolute;
  right: 0;
  bottom: 6px;
}