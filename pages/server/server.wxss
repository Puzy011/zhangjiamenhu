}

.kind-list-img {
  width: 4em;
  height: 4.6em;
}
.kind-list-item-hd {
  display: flex;
  align-items: center;
  transition: opacity .3s;
}
.kind-list-item-hd-show {
  opacity: .2;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
}
.fuwuimg{
