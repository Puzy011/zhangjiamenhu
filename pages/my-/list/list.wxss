/* 2tab */

.c-tab-nav {
  display: inline-block;
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  /* border-right: 1rpx solid #ededed; */
  box-sizing: border-box;
  text-align: center;
  color: #c7c7cb;
  font-size: 16px;
  background-color: #fff;
}

.c-tab-nav.on {
  color: #3b73ac;
  /* border-bottom: 5rpx solid #3b73ac;
  border-top: 5rpx solid #3b73ac; */
}

.c-content {
  /* padding: 22rpx; */
  margin-top: 20rpx;
  /* text-align: center; *//* background-color: #f1f1f1; */
  width: 100%;
  height: 100%;
}
.weui-form-preview :after ,.weui-form-preview ::before{
  border-bottom: none;
}

.weui-cells__title {
  text-align: center;
  font-size: 16px;
  color: #131313;
}
.weui-article {
  padding: 15px;
}
.weui-article__h1 {
  color: #3b73ac;
