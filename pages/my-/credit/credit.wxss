/* pages/my/list/list.wxss */
@import 'weui.wxss';

.main {
  font-family: 微软雅黑;
}

.weui-form-preview {
  /* margin-bottom: 25px; */
}

/* 2tab */

.c-tab-nav {
  display: inline-block;
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  /* border-right: 1rpx solid #ededed; */
  box-sizing: border-box;
  text-align: center;
  color: #c7c7cb;
  font-size: 16px;
  background-color: #fff;
}

.c-tab-nav.on {
  color: #3b73ac;
  /* border-bottom: 5rpx solid #3b73ac;
  border-top: 5rpx solid #3b73ac; */
}

.c-content {
  /* padding: 22rpx; */
  margin-top: 20rpx;
  /* text-align: center; *//* background-color: #f1f1f1; */
  width: 100%;
  height: 100%;
}

.weui-form-preview :after, .weui-form-preview ::before {
  border-bottom: none;
}

.weui-cells__title {
  text-align: center;
  font-size: 16px;
  color: #131313;
}

.weui-article {
  padding: 15px;
}

.weui-article__h1 {
  color: #3b73ac;
  font-size: 14px;
}

.weui-article__p {
  font-size: 12px;
  /* color: #131313; */
}

.section-border {
  width: 100%;
  text-align: center;
  border: 2rpx solid #3b73ac;
  border-radius: 8rpx;
  color: #3b73ac;
}

.section-border-list {
  width: 98%;
  text-align: center;
  border: 2rpx solid #3b73ac;
  border-radius: 8rpx;
  color: #3b73ac;
}

.section-border-list em {
  display: block;
  border-width: 20px;
  position: absolute;
  bottom: -40px;
  left: 100px;
  border-style: solid dashed dashed;
  border-color: #3b73ac transparent transparent;
  font-size: 0;
  line-height: 0;
}

.article-item {
  margin-top: 15px;
}

.article-item2 {
  margin-top: 15px;
  color: red;
  float: left;
}

.item-price {
  color: red;
}

.count_label {
  position: absolute;
  display: fixd;
  margin-left: 50%;
}
