/* pages/my/my.wxss */
page{
    font-family: 微软雅黑;
    background: #fff; 
}
.my{
  overflow: hidden;
  margin: 0 auto;
  display: flex;
  height:600rpx;
    /*background: url(http://img.zhangjiamenhu.com/HomePage.png) black no-repeat;
    background-position-y: 15%;*/
}
.my .img{
  position: absolute;
  height:600rpx;
  width:100%;
  opacity:0.5;
  filter:alpha(opacity=50);
}
.my .myyin{
  width: 100%;
  height: 220rpx;
  background: rgba(225, 225, 225, 0.4);
  position: relative;
  top: 400rpx;
}
.my .account{
    display: flex;
    flex-direction: column;
    margin:33% 0 0 -80px;
    justify-content:center;
}
.my .account .text{
    color: white;
}
.head_show{
  width: 220rpx;
  position: absolute;
  font-size:40rpx;
  left: 200rpx;
  top: 40rpx;
  line-height: 60rpx;
  color: #666;
}
.head_show text{
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}
.head_show view{
  font-size:35rpx;
}
.touxiang {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  border-radius: 55%;
  left: 60rpx;
  top: 50rpx;
}
.hat{
  position: absolute;
  width: 140rpx;
  /* height: 100rpx; */
  text-align: center;
  margin:40rpx 0 0 43%;
}
.common{
    width: 100%;
    height: 20rpx;
    background-color: #FAFBFD;
}
.search{
    width: 40%;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}
.search .item{
  align-items: center; 
  line-height:75rpx;
  background-color:rgba(225,225,225,0.6);
  margin:15rpx 0;
  border-radius:50rpx;
  font-size: 36rpx;
  color: #777;
  text-align:center;
}
.search .item text{
  color: #4697e8
}
.main{
    height: 90rpx;
    display: flex;
    align-items: center;
}
.main text{
    color: #333;
    font-size: 30rpx;
    margin-left: 30rpx;
}
.main image{
    width: 60rpx;
    height: 60rpx;
    margin-left: 30rpx;
}
.line{
    height: 2rpx;
    width: 90%;
    margin-left: 4%;
    background-color: #eee;
}
.number{
    color: #3b73ac;
}
